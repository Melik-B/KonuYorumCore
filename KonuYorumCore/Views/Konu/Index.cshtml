<h1><b>Konular</b></h1>

<h1>YAĞIZ ABİNİN TASARIMINDAN DAHA İYİ</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Baslik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aciklama)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Baslik)
                </td>
                @if (TempData["Mesaj"] != null)
                {
                    @TempData["Mesaj"].ToString()
                }
                <td>
                    @Html.DisplayFor(modelItem => item.Aciklama)
                </td>
                <td>
                    <a style="color:black;" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a style="color:black;" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a style="color:black;" asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a style="color:black;" asp-area="" asp-controller="Yorum" asp-action="Create">Yorum Yap</a>
                </td>
            </tr>
        }
    </tbody>
</table>